{
    "cli": {
        "version": ">= 5.0.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "channel": "development",
            "env": {
                "APP_ENV": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "channel": "preview",
            "env": {
                "APP_ENV": "production"
            },
            "android": {
                "buildType": "apk"
            }
        },
        "production": {
            "channel": "production",
            "env": {
                "APP_ENV": "production"
            },
            "android": {
                "buildType": "app-bundle"
            },
            "ios": {
                "resourceClass": "m-medium"
            }
        }
    },
    "submit": {
        "production": {
            "android": {
                "serviceAccountKeyPath": "./google-services-key.json",
                "track": "internal"
            },
            "ios": {
                "appleId": "your-apple-id@example.com",
                "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID"
            }
        }
    }
}